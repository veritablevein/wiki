.tc-tiddler-preview-preview {
    float: right;
    width: 49%;
    border: 1px solid #002b36;
    margin: 4px 0 3px 3px;
    padding: 3px 3px 3px 3px;
}

/* remove border */
.tc-tiddler-frame input.tc-edit-texteditor,  textarea.tc-edit-texteditor, iframe.tc-edit-texteditor {
    transition: border .14s ease-in-out;
    border: 2px solid #002b36;
    background: #002b36;
    padding: 4px;
    border-radius: 4px;
}

.cm-s-tiddlywiki .CodeMirror-activeline-background, .cm-s-tiddlywiki .CodeMirror-activeline-gutter .CodeMirror-linenumber {
    background: #002b36;
}

pre.cm-quote-line {
    padding-left: 0.4em !important;
    border-left:  #002b36 solid 0.1em !important;
}

