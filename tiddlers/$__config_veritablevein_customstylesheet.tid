html { scroll-behavior: smooth; }

.tc-tiddler-body > embed, .tc-tiddler-body > iframe {
  width: 100%;
  height: 600px;
  border: 0px;
}

.tc-notification {
	color: black;
	border-radius: 5px;
	border: 0;
	background: linear-gradient(45deg, #7f7fd5, #86a8e7, #91eae4); 
}

.tc-message-box {
<!--
	background: linear-gradient(to left, #ff0099, #493240);
	-->
	border-radius: 3px;
	color: black;
	transition: 1s;
}

.tc-improvement-banner {
	border-radius: 3px;
	background: linear-gradient(71deg, black, transparent);
}

select {
    color: #839496;
    background: #002b36;
    border: 0px;
}
<!-- fix import img in editor -->
.tc-editor-import {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-shadow: 1px 5px 5px #0000004d;
    padding: 10px;
    width: 96%;
    border: 1px solid inherit;
    text-align: center;
    background: yellow;
    border-radius: 5px;
}
.table thead tr td, table th {
		background: unset;
    font-weight: bold;
		border-radius: 3px;
		border: 2px solid !important;
}

.table th, table td {
    padding: 0 7px 0 7px;
    border: 2px solid;
}

.tc-titlebar h2 {
    font-size: 1.5rem;
    display: inline;
}

.tc-plugin-info-dropdown {
    border: 3px solid #93a1a1;
    background: #073642;
    margin-top: -8px;
    border-radius: 3px;
}

<!-- remove select --> 
.tc-subtitle {
    font-size: 0.9em;
    font-weight: normal;
    user-select: none;
}

<!-- fix link button drop -->
.tc-drop-down .tc-tab-buttons button.tc-tab-selected {
    background-color: #32b4c3;
		box-shadow: 1px 5px 5px #0000004d;
}

<!-- fix plugin button -->
.tc-btn-big-green {
    display: inline-block;
    padding: 8px;
    margin: 4px 8px 4px 8px;
    background: #5972d9;
    color: #073642;
    fill: #073642;
    border: none;
    border-radius: 2px;
    font-size: 1.2em;
    line-height: 1.4em;
    text-decoration: none;
}

.tc-drafts-list a {
    padding: 6px 12px;
    font-weight: normal;
    display: inline-block;
    margin: 10px;
    border-radius: 5px;
    background: yellow;
		margin: 10px;
		border-radius: 3px;
		color: black;
		transition: .5s;
		max-width: 400px;
}

.tc-drafts-list a:hover {
		background: cyan;
}

.tc-page-controls svg.tc-image-new-button {
    fill: #06d511;
}

.py-tabs.tc-tab-buttons button.tc-tab-selected {
    border: 0;
    color: #2f4085;
}
