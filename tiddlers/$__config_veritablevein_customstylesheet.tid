.tc-drop-down {
    min-width: 380px;
    border: 1px solid #002b36;
    background-color: #002b36;
    padding: 7px 0 7px 0;
    margin: 4px 0 0 0;
    white-space: nowrap;
    text-shadow: none;
    line-height: 1.4;
		box-shadow: 1px 5px 5px #0000004d;
}

.tc-block-dropdown {
    position: absolute;
    min-width: 220px;
    border: 1px solid #002b36;
    background-color: #002b36;
    padding: 7px 0;
    margin: 4px 0 0 0;
    white-space: nowrap;
    z-index: 1000;
    text-shadow: none;
		box-shadow: 1px 5px 5px #0000004d;
		transition: 1s 1s;
}

.CodeMirror {
  height: auto;
  border: 0px solid #073642;
  line-height: 1.5;
  font-family: "Fira Code", "SFMono-Regular",Consolas,"Liberation Mono",Menlo,Courier,monospace;
  font-size: 20px;
}

a.tc-tiddlylink.tc-plugin-info:hover {
    text-decoration: none;
    background-color: #5972d9;
    color: #073642;
    fill: #839496;
}

a.tc-tiddlylink.tc-plugin-info {
    border-radius: 3px;
		transition: .5s;
}

button.tc-btn-invisible {
     border-radius: 3px;
}

.tc-tab-buttons.tc-vertical {
    font-size: 75%;
}

.tc-table-of-contents li {
    font-size: 75%;
    font-weight: bold;
}