.lightbox {
    z-index: 10000;
}

.lightbox .tc-modal {
background:unset;
    display: flex;
    flex-direction: column;
    inset: 0;
    width: 100%;
}

.lightbox .tc-modal:after {
    background: <<color modal-backdrop>>;
    content: "";
    inset: 0;
    opacity: .3;
    position: absolute;
    z-index: -2;
}

.lightbox .tc-modal-header {
    background: <<color background>>;
    font-size: 1.2em;
    line-height: 1.4;
    text-align: center;
}

.lightbox .tc-modal-body {
    align-items: center;
    display: flex;
    flex-direction: column;
    flex: 1;
    max-height: unset;
    overflow: auto;
    padding: 0;
    text-align: center;
}

.tc-modal-wrapper.lightbox .tc-modal-backdrop{
    background:none;
}

.lightbox .tc-modal-body :is(div, p) {
    display: contents;
}

.lightbox .tc-modal-body img {
    height: 100%;
    object-fit: contain;
    width: 100%;
}

.lightbox .tc-modal-footer {
    display: contents;
}

